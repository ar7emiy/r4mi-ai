# r4mi-ai Environment Variables
# Copy to .env and fill in your values

# Gemini API key (get from https://aistudio.google.com/)
GEMINI_API_KEY=your_key_here

# Set to true to use Vertex AI instead of Google AI Studio
GOOGLE_GENAI_USE_VERTEXAI=false

# SQLite database path (relative to backend/)
DATABASE_URL=sqlite:///./r4mi.db

# Chatwoot (optional â€” for production integration)
CHATWOOT_API_URL=http://localhost:3000
CHATWOOT_API_KEY=your_chatwoot_key

# Pattern detection thresholds
PATTERN_CONFIDENCE_THRESHOLD=0.75
AGENTVERSE_MATCH_THRESHOLD=0.85

# Trust engine thresholds
TRUST_PROMOTION_MIN_RUNS=10
TRUST_PROMOTION_MAX_FAILURE_RATE=0.05
